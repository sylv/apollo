{
  "include": ["./src/"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "typings",
    "sourceMap": true,
    "removeComments": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    }
  }
}
